<div id='geomarker-form-errors'></div>
<%= form_for @geomarker, :html => { :multipart => true, :target => "blank_iframe" }, :remote => true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label "Description" %>
  <%= f.text_area :description %>
  <br>
  <%= f.label "Tags (a comma separated list)" %>
  <%= f.text_field :tag_list %>
  <br>
  <%= f.hidden_field :latitude, :value => params[:geomarker][:latitude] %>
  <%= f.hidden_field :longitude, :value => params[:geomarker][:longitude] %>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <%= f.label :image %>
  <%= f.file_field :image %>
  <hr>
  <input id="cancelFormButton" class="button small" type="button" value="Cancel"/>
  <%= f.submit "Submit", :class => "button small", :id => "submit" %>
<% end %>