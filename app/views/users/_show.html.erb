<ul class="showOptions">
  <li>
      <input id="closeShowButton" type="button" value="Close"/>
  </li>
  <% if current_user != @user %>
    <li>
      <% if @user.not_connected?(current_user.id) %>
          <input id="friendRequestButton" class="friendshipButton"  type="button" value="Add Friend"/>
      <% elsif @user.friends?(current_user.id) %>
          <input id="friendshipOptionButton" class="friendshipButton" type="button" value="Friends"/>
      <% elsif current_user.request_pending?(@user.id) %>
          <input id="acceptFriendshipButtonTop" class="friendshipButton" type="button" data-request-id="<%= current_user.request_id(@user) %>" value="Accept Friendship"/>
      <% elsif @user.request_pending?(current_user) %>
          <input id="requestPendingButton" class="friendshipButton" type="button" value="Friend Request Pending"/>
      <% end %>
    </li>
  <% end %>
</ul>
<hr>
<h1><%= @user.username %></h1>
<p><span>Email:</span> <%= @user.email %></p>
<hr>
<!-- Friend Requests -->
<div class="friendSection">
  <% unless @user.friend_requests.empty? || current_user != @user %>
    <div class="requestList">
      <h4>You have friend requests from:</h4>
      <ul class="requests">
        <% @user.friend_requests.each do |friend| %>
          <li class="request"><a class="friendProfileButton" href="#" data-id="<%= friend.id %>"><%= friend.username %></a>  <a id="acceptFriendshipButton" class="friendshipButton"  href="#" data-request-id="<%= @user.request_id(friend) %>">Accept Request</a>  <a id="ignoreRequestButton" class="friendshipButton" href="#">Ignore</a></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Friends List -->
  <h4>
    <% if current_user == @user %>
      Your Friends
    <% else %>
      <%= @user.username %>'s Friends
    <% end %>
  </h4>
  <ul class="friendsList">
    <%= render "friends" %>
  </ul>
</div>