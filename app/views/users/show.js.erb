clearViews();
disableMap();
$(".form-container").append("<div class='user-show' data-id='<%= @user.id %>'><%= j render 'users/show' %></div>");

$("#closeShowButton").on("click", function(){
  if(profileView){
    $("#user").trigger("click");
  } else {
    removeUserProfile();
    enableMap();
  }
});

$(".friendSection").on("click", ".friendProfileButton", function(e){
  var id = $(this).attr("data-id");
  removeUserProfile();
  getUserProfile(id);
  e.stopPropagation();
});

$("#acceptFriendshipButton").on("click", function(e){
  var id = $(this).attr("data-request-id");
  acceptFriendship(id, true);
  $(this).parent().remove();
  if ($(".requestList li").length == 0){
    $(".requestList").remove();
  }
  e.stopPropagation();
});

$(".showOptions").on("click", "#acceptFriendshipButtonTop", function(e){
  var id = $(this).attr("data-request-id");
  acceptFriendship(id, false);
  $(this).parent().append('<input id="friendshipOptionButton" class="friendshipButton" type="button" value="Friends"/>');
  $(this).remove();
  e.stopPropagation();
});

$(".showOptions").on("click", "#friendRequestButton", function(e){
  var id = $(this).attr("data-id");
  requestFriendship(id);
  $(this).parent().append('<input id="requestPendingButton" class="friendshipButton" type="button" value="Friend Request Pending"/>');
  $(this).remove()
  e.stopPropagation();
});

$("#ignoreRequestButton").on("click", function(e){
  var id = $(this).parent().attr("data-request-id");
  ignoreFriendship(id);
  $(this).parent().remove();
  if ($(".requestList li").length == 0){
    $(".requestList").remove();
  }
  e.stopPropagation();
});

$("#friendshipOptionButton").on("click", function(e){
  if ($("#friendDropMenu").is(":hidden")){
    $("#friendDropMenu").slideDown("fast");
    e.stopPropagation();
  };
});
$(document).on("click", function(){
  if ($("#friendDropMenu").is(":visible")){
    $("#friendDropMenu").slideUp("fast");
  }
});